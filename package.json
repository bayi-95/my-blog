{
  "name": "my-blog",
  "version": "1.1.0",
  "description": "我的博客，使用 vitepress 构建",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "vitepress dev docs --host 0.0.0.0",
    "build": "vitepress build docs",
    "fetch:docs": "cd scripts && bash weekly-docs.sh",
    "algolia": "docker run -it --env-file=.env -e \"CONFIG=$(cat algolia.json | jq -r tostring)\" algolia/docsearch-scraper",
    "typecheck": "tsc --noEmit && vue-tsc --noEmit --skipLibCheck",
    "lint:fix": "prettier --write  \"{docs, daily}/**/*.{vue, js, ts, scss, json, md}\"",
    "cleanup": "sa cleanup",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "svgo": "svgo -f docs/.vitepress/assets/svg -o docs/.vitepress/assets/svg",
    "preview": "vitepress preview docs",
    "prepare": "npx husky install",
    "release": "standard-version",
    "update-pkg": "sa update-pkg"
  },
  "keywords": [
    "博客",
    "申光普",
    "vitepress"
  ],
  "author": "申光普",
  "license": "MIT",
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@algolia/client-search"
      ]
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@sa/scripts": "workspace:*",
    "@types/fs-extra": "^11.0.4",
    "@types/markdown-it": "^14.1.2",
    "@types/node": "^22.10.9",
    "@typescript-eslint/eslint-plugin": "^8.21.0",
    "@typescript-eslint/parser": "^8.21.0",
    "@typescript-eslint/types": "^8.21.0",
    "autoprefixer": "^10.4.20",
    "eslint": "~9.18.0",
    "eslint-plugin-import": "^2.31.0",
    "eve": "~0.5.4",
    "fs-extra": "^11.3.0",
    "globby": "^14.0.2",
    "gray-matter": "^4.0.3",
    "gsap": "2.1.3",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.1",
    "markdown-it-mathjax3": "^4.3.2",
    "postcss": "^8.5.1",
    "prettier": "^3.4.2",
    "rollup-plugin-visualizer": "^5.14.0",
    "sass": "^1.83.4",
    "search-insights": "^2.17.3",
    "snapsvg-cjs": "^0.0.6",
    "standard-version": "^9.5.0",
    "svgo": "^3.3.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "unocss": "^65.4.3",
    "vite-svg-loader": "^5.1.0",
    "vitepress": "^1.6.3",
    "vitepress-plugin-rss": "^0.3.0",
    "vue": "^3.5.13",
    "vue-tsc": "^2.2.0"
  },
  "lint-staged": {
    "{docs, daily}/**/*.{vue, js, ts, scss, json, md}": [
      "prettier --write",
      "git add -A"
    ]
  },
  "dependencies": {
    "@giscus/vue": "^3.1.1",
    "@vueuse/core": "^12.5.0",
    "magic-snowflakes": "^7.0.1",
    "oh-my-live2d": "^0.19.3"
  }
}
