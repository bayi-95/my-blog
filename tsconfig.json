{
    "compilerOptions": {
        "allowJs": true,
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "jsx": "preserve",
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "lib": ["ESNext", "DOM"],
        "types": [],
        "baseUrl": "./",
        "paths": {
            "@/*": ["src/*"]
        },
    },
    "include": [
        "docs/.vitepress/**/*.ts",
        "docs/.vitepress/**/*.d.ts",
        "docs/.vitepress/**/*.tsx",
        "docs/.vitepress/**/*.vue",
        "types/*.d.ts"
    ],
    "exclude": ["dist", "node_modules"]
}
